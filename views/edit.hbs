        <tr style="display: none">
            <th align="left">Name:</th>
            <td><input id="iname" name="name" type="text" required></td>
        </tr>
        <tr>
            <th align="left">Date of Birth:</th>
            <td><input id="dob" name="dob" class="mx" type="date" required></td>
        </tr>
