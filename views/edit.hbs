            <td><input id="mothername" name="mothername" class="mx" type="text" required></td>
        </tr>
        <tr>
            <th align="left">Parmanent Address:</th>
            <td><textarea rows="6" id="paddress" name="padd" class="mx" cols="20" rows="1" required></textarea></td>
        </tr>
        <tr>
            <th align="left">Temporary Address:</th>
            <td><textarea rows="6" id="taddress" name="tadd" class="mx" cols="20" rows="1"></textarea></td>
        </tr>
        <tr>
            <th align="left">Nationality:</th>
            <td><input id="nationality" name="nationality" class="mx" type="text" required></td>
        </tr>   
        <tr>
